<form id="add-feature" name="add-feature" action="/project/features" method="post" onsubmit="return validateForm()">
	<h3>Add Feature options to the list : </h3>
	<table class="form_table">
		<tr>
			<td style="width: 80px">
				Feature : 
			</td> 
			<td>
				<input type="text" name="feature" id="feature" placeholder="Feature" ><br>
			</td>
		</tr>
		
		<tr>
			<td align="right" colspan=2>
				<input type="submit" value="Add">
			</td>

		</tr>
	</table>
</form>
	
	<br><br>
<h3>List of game features : </h3>
<table class="display_table">	
	<thead> 
		<th>ID </th>
        <th>Feature</th> 
		<th> </th>
    </thead> 
    <tbody> 
		{{#each features}}
        <tr> 
			<td>{{fid}} </td>
            <td width="200px">{{feature}}</td> 
			<td>
				<form id="deleteFeature" action="project/features/delete" method="get"> 
					<input type="submit" value="Delete">
					<input type="hidden" name="fid" value="{{fid}}">	
				</form>
			</td>
        </tr> 

        {{/each}} 
    </tbody> 
</table> 


<script>
	//Reference: https://www.w3schools.com/js/tryit.asp?filename=tryjs_validation_js
	function validateForm()
	{
		var x = document.forms["add-feature"]["feature"].value;
		if (x == "")
		{
			alert("In-Game Name must be filled out");
			return false;
		}
	}	
</script>